# define the sources for the Gem files
source 'http://rubygems.org'

# declare base dependencies
gem "sinatra"
gem "sinatra-contrib"
gem "barista"

# setup the development group dependencies
group :development do
  gem "therubyracer"
  gem "sinatra-reloader"
end

# setup the test group dependencies
group :test do
  gem "rspec"
end  
